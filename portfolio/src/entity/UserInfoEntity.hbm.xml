<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.UserInfoEntity" table="user_info" schema="portfolio">
        <id name="name">
            <column name="name" sql-type="varchar(20)" length="20"/>
        </id>
        <property name="psw">
            <column name="psw" sql-type="varchar(32)" length="32"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(30)" length="30"/>
        </property>
    </class>
</hibernate-mapping>